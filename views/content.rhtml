<h3><%=h sidebar.title %></h3>
<style type="text/css">
  .onebit_mp3 a { color: #CC0000; }
</style>
<script type="text/javascript" src="/1bit/swfobject.js"></script>
<script type="text/javascript" src="/1bit/1bit.js"></script>
<script type="text/javascript">
  oneBit = new OneBit('/1bit/1bit.swf');
  oneBit.ready(function() {
    // Using specify you can set 'color', 'background', 'playerSize', 'position' and 'analytics' - all are optional
    oneBit.specify('background', 'transparent');
    oneBit.specify('playerSize', '15');
    oneBit.specify('analytics', true);
    oneBit.specify('color', '#CC0000');
    // Apply is called after options are specified and includes the CSS selector
    oneBit.apply('a');
  });
</script>
<div>    
  <p>老男孩 <a href="/1bit/laonanhai.mp3"></a></p>
</div>